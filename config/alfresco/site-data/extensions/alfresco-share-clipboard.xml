<extension>
	<modules>
		<module>
			<id>Alfresco Share Clipboard</id>
			<auto-deploy>true</auto-deploy>
			<components>
				<component>
					<scope>template</scope>
					<region-id>toolbar</region-id>
					<source-id>documentlibrary</source-id>
					<sub-components>
						<sub-component id="alfresco-share-clipboard-menu">
							<url>/components/clipboard/menu</url>
						</sub-component>
					</sub-components>
				</component>
				<component>
					<scope>template</scope>
					<region-id>toolbar</region-id>
					<source-id>repository</source-id>
					<sub-components>
						<sub-component id="alfresco-share-clipboard-menu">
							<url>/components/clipboard/menu</url>
						</sub-component>
					</sub-components>
				</component>
			</components>
		</module>
	</modules>
</extension>

